#projectWrapper
  background rgba(0, 0, 0, 1)
  height 100%
  left 0
  position absolute
  top 0
  width 100%
  z-index 0
  transition all 0.5s ease
  &.active
    background rgba(0, 0, 0, 1)
    z-index 1
    .container img
     transform scale(1)
  .container
    margin 0 auto
    max-width 128rem
    position relative
    h2
      bottom 25%
      color #ffffff
      font-family 'Lato', sans-serif
      font-size 4rem
      font-weight 700
      left 10%
      position fixed
      text-align center
      text-transform uppercase
      text-shadow 2px 2px #000000
      z-index 1
    p
      bottom 22%
      color grey
      font-family 'Lato', sans-serif
      font-size 2rem
      font-weight 400
      left 10%
      opacity 1
      position fixed
      text-align center
      text-transform uppercase
      text-shadow 2px 2px #000000
      z-index 1
    img
      display block
      transform scale(2)
      margin 0 auto
      max-width 960px
      width 100%
      transition all 0.5s ease
